<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ProgressBar
        android:layout_width="@dimen/_20mdp"
        android:layout_height="@dimen/_20mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/_3mdp"
        android:layout_marginTop="@dimen/_5mdp"
        android:background="@drawable/bg_circle_white"
        android:id="@+id/loadMoreProgress"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loadMoreTxt"
        app:layout_constraintTop_toBottomOf="@+id/loadMoreProgress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:textSize="@dimen/_12font_mdp"
        android:text="Oppps! Please try again!"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/loadMoreRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Retry"
        android:textAllCaps="false"
        android:textSize="@dimen/_14font_mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cornerRadius="@dimen/_10mdp"
        app:layout_constraintTop_toBottomOf="@+id/loadMoreTxt"/>


</androidx.constraintlayout.widget.ConstraintLayout>